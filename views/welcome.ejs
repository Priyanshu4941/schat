<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Welcome - Chat App</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            padding: 20px;
        }
        .welcome-card {
            background: white;
            border-radius: 20px;
            box-shadow: 0 20px 60px rgba(0, 0, 0, 0.3);
            padding: 50px 40px;
            text-align: center;
            animation: slideUp 0.5s ease-out;
        }
        @keyframes slideUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        .welcome-icon {
            font-size: 80px;
            color: #667eea;
            margin-bottom: 20px;
        }
        .btn-action {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            border-radius: 15px;
            padding: 20px 40px;
            font-weight: 600;
            font-size: 18px;
            margin: 10px;
            transition: all 0.3s ease;
            width: 100%;
            max-width: 300px;
        }
        .btn-action:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 30px rgba(102, 126, 234, 0.4);
        }
        .btn-secondary-action {
            background: #f8f9fa;
            border: 2px solid #667eea;
            color: #667eea;
            border-radius: 15px;
            padding: 20px 40px;
            font-weight: 600;
            font-size: 18px;
            margin: 10px;
            transition: all 0.3s ease;
            width: 100%;
            max-width: 300px;
        }
        .btn-secondary-action:hover {
            background: #667eea;
            color: white;
            transform: translateY(-5px);
        }
        .action-buttons {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 15px;
            margin-top: 40px;
        }
        .logout-link {
            color: #999;
            text-decoration: none;
            margin-top: 30px;
            display: inline-block;
        }
        .logout-link:hover {
            color: #667eea;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-12 col-md-10 col-lg-8">
                <div class="welcome-card">
                    <div class="welcome-icon">
                        <i class="bi bi-chat-dots"></i>
                    </div>
                    <h1 class="mb-3">Welcome to Our Chat App!</h1>
                    <p class="text-muted mb-2">Hello, <strong class="text-primary"><%= userName %></strong></p>
                    <p class="text-muted mb-4">Choose an option to continue:</p>
                    
                    <div class="card shadow-sm mb-4 text-start">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center mb-2">
                                <div>
                                    <h5 class="card-title mb-1">Romance Emoji Pack</h5>
                                    <p class="card-text text-muted small mb-0">Includes extra romance & intimacy emojis (18+)</p>
                                </div>
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" role="switch" id="romanceToggle">
                                </div>
                            </div>
                            <small class="text-muted">Enable only if you are 18+ and agree to view romance emojis.</small>
                        </div>
                    </div>

                    <div class="action-buttons">
                        <a href="/create-room?user=<%= encodeURIComponent(userName) %>&email=<%= encodeURIComponent(userEmail) %>" class="btn btn-action text-white">
                            <i class="bi bi-plus-circle"></i> Create Room
                        </a>
                        <a href="/enter-room?user=<%= encodeURIComponent(userName) %>&email=<%= encodeURIComponent(userEmail) %>" class="btn btn-secondary-action">
                            <i class="bi bi-box-arrow-in-right"></i> Enter Room
                        </a>
                    </div>

                    <div class="mt-4">
                        <a href="/login" class="logout-link">
                            <i class="bi bi-box-arrow-left"></i> Logout
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Romance confirmation Modal -->
    <div class="modal fade" id="romanceModal" tabindex="-1" aria-labelledby="romanceModalLabel" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="romanceModalLabel"><i class="bi bi-heart-fill text-danger"></i> Romance Emoji Pack</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <p class="mb-3">The romance emoji pack contains flirtatious emojis (kisses, hearts, love faces). Please confirm:</p>
                    <ul>
                        <li>I am 18 years or older.</li>
                        <li>I consent to see romance & intimacy emojis.</li>
                        <li>I understand the emojis are standard Unicode (no explicit content).</li>
                    </ul>
                    <div class="form-check mt-3">
                        <input class="form-check-input" type="checkbox" value="" id="confirmAdult">
                        <label class="form-check-label" for="confirmAdult">
                            I confirm the above statements.
                        </label>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="button" class="btn btn-danger" id="enableRomanceBtn" disabled>Enable Pack</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const romanceToggle = document.getElementById('romanceToggle');
        const romanceModal = new bootstrap.Modal(document.getElementById('romanceModal'));
        const confirmAdult = document.getElementById('confirmAdult');
        const enableRomanceBtn = document.getElementById('enableRomanceBtn');

        // Initialize toggle from localStorage
        const romanceEnabled = localStorage.getItem('romanceEmojiEnabled') === 'true';
        romanceToggle.checked = romanceEnabled;

        romanceToggle.addEventListener('change', () => {
            if (romanceToggle.checked) {
                confirmAdult.checked = false;
                enableRomanceBtn.disabled = true;
                romanceModal.show();
            } else {
                localStorage.setItem('romanceEmojiEnabled', 'false');
            }
        });

        confirmAdult.addEventListener('change', () => {
            enableRomanceBtn.disabled = !confirmAdult.checked;
        });

        enableRomanceBtn.addEventListener('click', () => {
            localStorage.setItem('romanceEmojiEnabled', 'true');
            romanceModal.hide();
        });

        document.getElementById('romanceModal').addEventListener('hidden.bs.modal', () => {
            if (localStorage.getItem('romanceEmojiEnabled') !== 'true') {
                romanceToggle.checked = false;
            }
        });
    </script>
</body>
</html>
